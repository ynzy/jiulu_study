<!-- pages/my/my.wxml 我的页面 -->
<view class="container">
  <image src="/images/my/my@bg.png" class="bg"></image>
  <!-- <open-data class="avatar avatar-position" type="userAvatarUrl" lang="zh_CN" /> -->
  <v-button wx:if="{{!authorized}}" open-type="getUserInfo" class="avatar-position" bind:getuserinfo="onGetUserInfo">
    <image slot="img" class="avatar" src="/images/my/my.png" />
  </v-button>
  <view wx:if="{{authorized}}"
  class="avatar-container avatar-position">
    <image src="{{userInfo.avatarUrl}}" class="avatar" />
    <text >{{userInfo.nickName}}</text>
  </view>
  <view class="about-container">
    <view bind:tap="onJumpToAbout" class="about-us">
      <image src="/images/my/about.png" />
      <text class="description">关于我们</text>
    </view>
    <view class="about-us">
      <!-- <text class="book-num">{{myBooksCount}}</text> -->
      <text class="description">喜欢的书</text>
    </view>
  </view>
  <!-- <button open-type="getUserInfo" bindgetuserinfo="getUserInfo">授权</button> -->
</view>