.container {
  height: 60rpx;
  display: inline-flex;
}
.container .index-container {
  display: flex;
  align-items: baseline;
}
.container .index-container .plain {
  font-size: 32rpx;
}
.container .index-container .index {
  line-height: 60rpx;
  font-size: 60rpx;
  font-weight: 800;
  margin-right: 14rpx;
}
.container .index-container .line {
  height: 44rpx;
  margin-right: 14rpx;
  border-left: 1px solid #000;
}
.container .date-container {
  display: flex;
  flex-direction: column;
  margin-top: 5rpx;
}
.container .date-container .month {
  font-size: 24rpx;
  line-height: 24rpx;
}
.container .date-container .year {
  font-size: 10px;
}
