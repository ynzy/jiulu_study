<!-- components/classic/music/index.wxml 期刊音乐组件 -->
<view class="container" hidden="{{hidden}}">
  <image class="classic-img" src="{{img}}"></image>
  <image class="player-img" bind:tap="onPlay" src="{{playing? pauseSrc : playSrc}}"></image>
  <image class="tag" src="./images/music@tag.png"></image>
  <text class="content">{{content}}</text>
</view>